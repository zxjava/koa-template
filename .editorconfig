root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4

[*.hbs]
indent_size = 2

[*.less]
indent_size = 2
